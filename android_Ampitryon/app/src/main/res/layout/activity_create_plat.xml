<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/textViewCreateCommande"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="110dp"
        android:text = "Menu d'ajout d'un plat"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textViewPlatCreate"
        android:layout_width="167dp"
        android:layout_height="22dp"
        android:layout_margin="30dp"
        android:text="Sélectionnez un plat"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewCreateCommande" />

    <Spinner
        android:id="@+id/spinnerPlatCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewPlatCreate" />

    <TextView
        android:id="@+id/textViewInfosCompCreate"
        android:layout_width="240dp"
        android:layout_height="22dp"
        android:layout_margin="30dp"
        android:text="Insérez les infos complémentaires"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerPlatCreate" />

    <EditText
        android:id="@+id/editTextInfosCompCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Informations complémentaires"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewInfosCompCreate" />

    <TextView
        android:id="@+id/textViewQuantiteCreate"
        android:layout_width="240dp"
        android:layout_height="22dp"
        android:layout_margin="30dp"
        android:text="Insérez la quantité"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextInfosCompCreate" />

    <EditText
        android:id="@+id/editTextQuantiteCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Quantité"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewQuantiteCreate" />

    <Button
        android:id="@+id/buttonValiderCreatePlat"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="VALIDER"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextQuantiteCreate" />

    <Button
        android:id="@+id/buttonQuitterCreatePlat"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="QUITTER"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextQuantiteCreate" />

</androidx.constraintlayout.widget.ConstraintLayout>