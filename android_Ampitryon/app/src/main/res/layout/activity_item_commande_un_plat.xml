<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView_nomPlat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="nomPlat "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/textView_quantite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="quantite "
        app:layout_constraintStart_toEndOf="@+id/textView_nomPlat"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView_nomPlat"/>

    <TextView
        android:id="@+id/textView_etatPlat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="etatPlat "
        app:layout_constraintStart_toEndOf="@+id/textView_quantite"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView_quantite"/>

    <TextView
        android:id="@+id/textView_infosComp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="infosComp "
        app:layout_constraintStart_toEndOf="@+id/textView_etatPlat"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView_etatPlat"/>
</androidx.constraintlayout.widget.ConstraintLayout>