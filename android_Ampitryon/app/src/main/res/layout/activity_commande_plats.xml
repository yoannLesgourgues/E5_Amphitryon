<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonReglerCommande"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="RÃ©gler la commande"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textViewCommandePlats"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text = "Liste des plats de la commande"
        android:textAlignment="center"
        android:textSize="27dp"
        app:layout_constraintTop_toBottomOf="@id/buttonReglerCommande"
        tools:layout_editor_absoluteX="0dp" />

    <ListView
        android:id="@+id/listViewCommandePlats"
        android:layout_width="320dp"
        android:layout_height="400dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCommandePlats"/>

    <Button
        android:id="@+id/buttonAjouterPlat"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Ajouter un plat"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/listViewCommandePlats"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/buttonModifierCommande"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Modifier la commande"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonAjouterPlat" />

    <Button
        android:id="@+id/buttonSupprimerCommande"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Supprimer la commande"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonAjouterPlat" />

    <Button
        android:id="@+id/buttonQuitterCommandePlats"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Quitter"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonModifierCommande"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>